{
  "compilerOptions": {
    "baseUrl": "packages/",
    "module": "ESNext",
    "jsx": "preserve",
    "rootDir": "packages/",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "lib": ["es7", "dom", "es2019.array"],
    "target": "es5",
    "moduleResolution": "node",
    "paths": {
      "crafter": ["crafter/src"]
    }
  },
  "include": ["packages/crafter/src", "packages/ravioli/src"],
  "exclude": ["packages/crafter/src/globals.d.ts"]
}
