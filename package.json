{
  "private": true,
  "workspaces": [
    "packages/crafter",
    "packages/crafter-react",
    "packages/ravioli"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretty-quick"
    }
  },
  "scripts": {
    "test": "lerna run test",
    "new-version": "lerna version --conventional-commits --yes",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "pretty-quick": "pretty-quick --staged --pattern \"*.ts\""
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}
