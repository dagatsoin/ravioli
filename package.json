{
  "private": true,
  "workspaces": [
    "packages/crafter",
    "packages/crafter-react",
    "packages/ravioli"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretty-quick"
    }
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts ./packages",
    "pretty-quick": "pretty-quick --staged --pattern \"*.ts\""
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}
