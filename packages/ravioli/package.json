{
  "name": "@warfog/ravioli",
  "version": "0.0.6",
  "author": "Daniel Neveux",
  "description": "Reactive framework based on the SAM pattern.",
  "scripts": {
    "lint": "../../node_modules/.bin/eslint -c ../../.eslintrc.js --ext .ts .",
    "test": "node_modules/.bin/jest --config=./package.json"
  },
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "types": "dist/ravioli/src/index.d.ts",
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/tests/*.(test|spec).ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "keywords": [],
  "peerDependencies": {
    "@warfog/crafter": "^0.0.1"
  }
}
