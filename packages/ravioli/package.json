{
  "name": "@warfog/ravioli",
  "version": "1.0.0",
  "author": "Daniel Neveux",
  "description": "Reactive framework based on the SAM pattern.",
  "scripts": {
    "build": "yarn run clean && yarn run lint && node build.js && yarn emit-declaration",
    "emit-declaration": "tsc -p tsconfig.build.json --outDir dist --emitDeclarationOnly --declaration",
    "clean": "rimraf dist",
    "lint": "eslint -c ../../.eslintrc.js --ext .ts .",
    "test": "jest --config=./package.json"
  },
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.ts",
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "<rootDir>/tests/*.(test|spec).ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@warfog/crafter": "^1.0.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslib": "^1.11.1",
    "typescript": "^3.8.2"
  },
  "keywords": [],
  "peerDependencies": {
    "@warfog/crafter": "^0.0.1"
  }
}
