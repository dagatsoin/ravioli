{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["es7", "dom", "es2019.array"],
    "target": "es5",
    "moduleResolution": "node"
  },
  "include": ["src/index.ts", "src/globals.d.ts", "tests"],
  "exclude": ["src/plugins", "dist"]
}
