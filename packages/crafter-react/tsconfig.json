    "module": "commonjs",
    "jsx": "react",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es7",
      "dom",
      "es2019.array"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "../",
    "paths": {
      "@warfog/crafter": ["crafter/src"]
    }
  },
  "include": ["src/index.ts", "jest.setup.ts", "tests/*", "../crafter/src/*"],
  "exclude" : ["dist"]
}