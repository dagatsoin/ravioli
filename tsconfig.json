{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "resolveJsonModule":true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "es2019"
    ],
    "jsx": "react",
  },
  "include": [
    "./src/*",
    "./example-rpg/*",
    "./.eslintrc.js"
  ],
}