{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es7",
      "dom"
    ],
    "target": "es5",
    "moduleResolution": "node"
  },
  "exclude" : [
    "src/index.ts",
    "src/**/*.test.ts",
    "src/api",
    "src/lib",
    "src/tests"
  ],
}